    <script>
      // MINDEN esem√©nyregisztr√°ci√≥t csak a DOMContentLoaded ut√°n v√©gz√ºnk,
      // √©s mindig ellen≈ërizz√ºk, hogy az elem l√©tezik-e, hogy ne dobjon hib√°t.
      document.addEventListener("DOMContentLoaded", () => {
        // Foglal√°s ≈±rlap (ha van)
        const fogForm = document.getElementById("foglalas_urlap");
        if (fogForm) {
          fogForm.addEventListener("submit", function (e) {
            e.preventDefault();
            alert("Foglal√°s sikeresen r√∂gz√≠tve!");
          });
        }

        // Bejelentkez√©s ≈±rlap (ha van)
        const bejForm = document.getElementById("bejelentkezes_urlap");
        if (bejForm) {
          bejForm.addEventListener("submit", function (e) {
            e.preventDefault();
            alert("Bejelentkez√©s sikeres (demo)!");
          });
        }

        // Regisztr√°ci√≥ ≈±rlap (ha van)
        const regForm = document.getElementById("regisztracio_urlap");
        if (regForm) {
          regForm.addEventListener("submit", function (e) {
            e.preventDefault();
            alert("Regisztr√°ci√≥ sikeres (demo)!");
          });
        }

        // Profil ikon -> leny√≠l√≥ men√º
        const profileIcon = document.querySelector(".profile-icon");
        const profileMenu = document.querySelector(".profile-menu");

        if (!profileIcon || !profileMenu) {
          console.log("Profil ikon vagy profil men√º hi√°nyzik.");
          return;
        }

        // Nyit√°s / z√°r√°s
        profileIcon.addEventListener("click", (e) => {
          e.stopPropagation();
          profileMenu.classList.toggle("open");
          const dropdown = profileMenu.querySelector(".dropdown");
          if (dropdown) {
            const isOpen = profileMenu.classList.contains("open");
            dropdown.setAttribute("aria-hidden", !isOpen);
          }
        });

        // Klikk b√°rhova -> bez√°r
        document.addEventListener("click", () => {
          profileMenu.classList.remove("open");
          const dropdown = profileMenu.querySelector(".dropdown");
          if (dropdown) dropdown.setAttribute("aria-hidden", "true");
        });
      });
    </script>
